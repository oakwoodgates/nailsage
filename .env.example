# ==============================================================================
# Nailsage Trading Platform Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# For Docker deployment, copy to /opt/nailsage/secrets/.env on your server

# ==============================================================================
# Environment Configuration
# ==============================================================================

# Environment Mode (dev or prod)
MODE=dev

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==============================================================================
# Database Configuration
# ==============================================================================

# Database URL (SQLite for local dev, PostgreSQL for production)
# SQLite: sqlite:///execution/state/paper_trading.db
# PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///execution/state/paper_trading.db

# PostgreSQL Password (for Docker production deployment)
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# ==============================================================================
# Kirby WebSocket Configuration
# ==============================================================================

# Kirby WebSocket URLs
# Dev: ws://localhost:8000/ws (local Kirby instance)
# Prod: wss://your-kirby-domain.com/ws
KIRBY_WS_URL_DEV=ws://localhost:8000/ws
KIRBY_WS_URL_PRO=wss://api.your-domain.com/ws

# Kirby API Keys (starts with kb_)
# Get from Kirby admin panel
KIRBY_API_KEY_DEV=YOUR_DEV_API_KEY_HERE
KIRBY_API_KEY_PRO=YOUR_PROD_API_KEY_HERE

# ==============================================================================
# Starlisting Mappings
# ==============================================================================
# These map (exchange, symbol, interval) to starlisting_id in Kirby
# Get actual IDs from Kirby API or admin panel

# Binance starlistings
STARLISTING_BTC_USDT_15M=1
STARLISTING_BTC_USDT_1H=2
STARLISTING_BTC_USDT_4H=3
STARLISTING_SOL_USDT_4H=4
STARLISTING_ETH_USDT_15M=5

# Hyperliquid starlistings
STARLISTING_BTC_USD_15M=10

# ==============================================================================
# Paper Trading Configuration
# ==============================================================================

# Initial capital for paper trading
PAPER_TRADING_INITIAL_CAPITAL=100000.0

# Legacy: SQLite database path (used if DATABASE_URL not set)
PAPER_TRADING_DB_PATH=execution/state/paper_trading.db

# Logging level for paper trading
PAPER_TRADING_LOG_LEVEL=INFO

# Snapshot interval (seconds) - how often to log status
PAPER_TRADING_SNAPSHOT_INTERVAL=60

# ==============================================================================
# Docker: Multi-Strategy Configuration
# ==============================================================================
# For running multiple strategies per container (grouped by exchange)

# Binance Strategies
# Comma-separated list of strategy IDs to run
BINANCE_STRATEGY_IDS=btc_momentum_v1,sol_swing_v1
# Comma-separated list of starlisting IDs for Binance
BINANCE_STARLISTING_IDS=1,4

# Hyperliquid Strategies (optional, disabled by default)
HYPERLIQUID_STRATEGY_IDS=
HYPERLIQUID_STARLISTING_IDS=

# ==============================================================================
# Docker: API Configuration
# ==============================================================================

# API polling interval for WebSocket updates (seconds)
POLL_INTERVAL=2

# ==============================================================================
# Strategy-Specific Configuration (Optional)
# ==============================================================================
# Override default parameters per strategy
# Format: {STRATEGY_ID}_{PARAMETER}

# Example: BTC Momentum strategy parameters
# BTC_MOMENTUM_V1_CONFIDENCE_THRESHOLD=0.5
# BTC_MOMENTUM_V1_POSITION_SIZE=10000.0
# BTC_MOMENTUM_V1_COOLDOWN_BARS=4
# BTC_MOMENTUM_V1_INTERVAL=15m

# Example: SOL Swing strategy parameters
# SOL_SWING_V1_CONFIDENCE_THRESHOLD=0.6
# SOL_SWING_V1_POSITION_SIZE=5000.0
# SOL_SWING_V1_COOLDOWN_BARS=6
# SOL_SWING_V1_INTERVAL=4h
