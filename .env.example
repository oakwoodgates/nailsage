# Kirby API Configuration
# Copy this file to .env and fill in your actual values

# Environment Mode (dev or prod)
MODE=dev

# Kirby WebSocket URL
# Dev: ws://localhost:8000/ws
# Prod: wss://api.domain.com:8000/ws
KIRBY_WS_URL_DEV=ws://localhost:8000/ws
KIRBY_WS_URL_PRO=wss://api.domain.com:8000/ws

# Kirby API Key (starts with kb_)
# Get from Kirby admin panel
KIRBY_API_KEY_DEV=YOUR_API_KEY_HERE
KIRBY_API_KEY_PRO=YOUR_API_KEY_HERE

# Starlisting ID Mappings
# These map (symbol, interval) to starlisting_id in Kirby
# Get from Kirby API or admin panel
# TODO: Replace with real starlisting IDs from Kirby
STARLISTING_BTC_USDT_15M=1
STARLISTING_SOL_USDT_4H=2

# Paper Trading Configuration
PAPER_TRADING_INITIAL_CAPITAL=100000.0
PAPER_TRADING_DB_PATH=execution/state/paper_trading.db
PAPER_TRADING_LOG_LEVEL=INFO

# Optional: Snapshot interval (seconds)
PAPER_TRADING_SNAPSHOT_INTERVAL=60
